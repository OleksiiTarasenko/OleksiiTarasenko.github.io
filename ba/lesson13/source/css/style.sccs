* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  transition: all 0.1s ease-out;
}

html,
body {
  height: 100%;
  font-size: 20px;
}

html {
  scroll-behavior: smooth;
  font-family: "Raleway", sans-serif;
}

.clearfix:after {
  clear: both;
  content: ".";
  display: block;
  height: 0;
  visibility: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}
.wrapper_top {
  background-image: url(../img/splash.png);
  background-position: center;
  background-size: cover;
  background-repeat: no-repeat;
  min-height: 100vh;
  height: 1px;
}
.header,
.navi,
.home,
.about,
.contacts,
.footer {
  display: flex;
}

.header {
  flex-direction: row;
  justify-content: space-between;
  padding: 60px 11% 0 10%;
}
.logo {
  font-family: "Pacifico", cursive;
  text-transform: capitalize;
  font-size: 2.5rem;
}
.navi__list {
  list-style: none;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.navi__item {
  padding-left: 40px;
}

.navi__link {
  text-decoration: none;
  text-transform: uppercase;
  color: #262626;
  cursor: pointer;
  border: 2px solid transparent;
  padding-top: 10px;
  font-size: 0.8rem;
  line-height: 1.25rem;
  font-weight: bold;
}

.navi__link_hover:hover {
  border-top: 2px solid #ff6033;
}

.home {
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-top: 10%;
  padding-left: 10%;
  padding-bottom: 20%;
  width: 40%;
  min-width: 400px;
  height: 90vh;
}
.home__header {
  font-size: 3rem;
  font-weight: 900;
  padding-bottom: 37px;
}

.content {
  font-size: 0.85rem;
  font-weight: 300;
  line-height: 1.35rem;
}

.btn {
  width: 200px;
  padding: 20px 10px;
  border: none;
  font-family: "Raleway", sans-serif;
  font-weight: 300;
  font-size: 1rem;
  line-height: 1.35rem;
  text-transform: uppercase;
  -webkit-box-shadow: -1px 22px 25px -8px rgba(0, 0, 0, 0.32);
  -moz-box-shadow: -1px 22px 25px -8px rgba(0, 0, 0, 0.32);
  box-shadow: -1px 22px 25px -8px rgba(0, 0, 0, 0.32);
}

.btn:hover {
  cursor: pointer;
}
.home__btn {
  margin-top: 35px;
  background-color: #ff6033;
  color: #fff;
}

.scroll {
  height: 48px;
  width: 30px;
  background-image: url("../img/scroll.png");
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  opacity: 0.5;
  position: fixed;
  bottom: 7%;
  left: calc(50% - 17px);
}

.about {
  background: #00b1b1;
  position: relative;
  min-height: 700px;
  height: 70vh;
  z-index: -1;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.about_img {
  display: inline-block;
  height: auto;
  margin: 10% 0 0 11%;
}

.about__content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  padding: 5% 10% 0 6.66%;
  height: 65%;
}

.about__header {
  font-size: 4.5rem;
  font-weight: bold;
  padding-bottom: 30px;
}

.services {
  min-height: 700px;
  height: 90vh;
  background: #70bfff;
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-around;
}
.services__header {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 50%;
  background-image: url("../img/tomato.png");
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
  font-size: 4.5rem;
  color: #fff;
}
.navi__list_services {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
}

.navi__item_services {
  background: white;
  width: 90%;
  height: 105px;
  margin: 0 0 20px 80px;
  display: flex;
  padding: 0;
}

.navi__link_services {
  min-width: 400px;
  width: 100%;
  text-transform: capitalize;
  text-align: center;
  position: relative;
  margin: auto;
}

.navi__item_services .navi__link_services::after {
  content: "";
  display: block;
  height: 55px;
  width: 55px;
  position: absolute;
  top: 0;
  right: 25px;
}

.navi__item_services:first-of-type .navi__link_services::after {
  background: url("../img/css_sprites.png") -25px -25px;
}

.navi__item_services:nth-of-type(2) .navi__link_services::after {
  background: url("../img/css_sprites.png") -226px -25px;
}

.navi__item_services:nth-of-type(3) .navi__link_services::after {
  background: url("../img/css_sprites.png") -122px -25px;
}

.navi__item_services:last-of-type .navi__link_services::after {
  background: url("../img/css_sprites.png") -331px -25px;
}

.gallery {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #ffe92f;
  min-height: 800px;
  height: 100vh;
}

.gallery__header {
  width: 42%;
  min-width: 660px;
  color: black;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.gallery__header h1 {
  font-size: 4.5rem;
  font-weight: bold;
  padding: 100px 30px;
}

.gallery__header p {
  font-size: 0.85rem;
  font-weight: light;
  line-height: 1.35rem;
  text-align: center;
  padding-bottom: 50px;
}

.gallery__main {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 80%;
  width: 80vw;
  border: 5px solid transparent;
}

.gallery__row {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  min-width: 80vw;
  width: 1px;
}
.gallery__row:first-of-type {
  height: calc(60% - 5px);
  flex-direction: row;
  justify-content: flex-start;
}

.gallery__row:first-of-type > .gallery__col {
  width: calc(33.33% - 10px);
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
}

.gallery .gallery__row:last-of-type {
  height: calc(40% - 5px);
  flex-direction: row;
}

.gallery__item {
  margin: 5px;
}

.gallery__item_1 {
  height: 100%;
  width: calc(66.66% - 10px);
  background-image: url("../img/gallery-1.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
}

.gallery__item_2 {
  height: 50%;
  width: 100%;
  background-image: url("../img/gallery-2.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
  margin-top: 0;
}

.gallery__item_3 {
  height: 50%;
  width: 100%;
  background-image: url("../img/gallery-3.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
  margin-bottom: 0;
}

.gallery__item_4 {
  height: 100%;
  width: calc(50% - 5px);
  background-image: url("../img/gallery-4.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
}

.gallery__item_5 {
  height: 100%;
  width: calc(50% - 5px);
  background-image: url("../img/gallery-5.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
}

.btn_gallery {
  background-color: #5585a2;
  color: white;
  margin: 15px auto 35px;
}

.subscribe {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-image: url("../img/bg_subscribe.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  height: 1px;
  min-height: 60vh;
  padding: 50px 100px;
}
.subscribe__header {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 50px 0 50px;
  width: 50%;
}

.subscribe__header h1 {
  margin-bottom: 30px;
}
.subscribe__input {
  display: inline-block;
  height: 65px;
  width: 550px;
  margin-bottom: 5%;
}
.subscribe__input::placeholder {
  opacity: 0.5;
  padding-left: 25px;
}

.btn_subscribe {
  background: #96b92c;
  color: white;
  margin-left: 20px;
}
.contacts {
  min-height: 700px;
  height: 90vh;
  background-image: url("../img/footer_bg.png");
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.contacts__header {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 165px;
  width: 40%;
  min-width: 400px;
  text-align: center;
}

.contacts__header h1 {
  font-size: 3.5rem;
  font-weight: bold;
}

.contacts__header h5 {
  font-size: 0.85rem;
  font-weight: bold;
  width: 80%;
}

.contacts__content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  height: 457px;
}

.contacts__form {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 385px;
  width: 500px;
  padding-right: 85px;
}

.contacts__form input {
  height: 60px;
  background-color: #77d8d6;
}
.contacts__form input,
.contacts__form textarea {
  background-color: rgba(119, 216, 214, 0.5);
  border: none;
  border-left: 3px solid transparent;
  outline: none;
  font-size: 0.75rem;
  font-weight: 300;
  padding-left: 25px;
  color: white;
}

.contacts__form input:focus,
.contacts__form textarea:focus {
  background-color: rgba(119, 216, 214, 0.85);
  border-left: 3px solid #355b82;
  font-weight: bold;
  color: #fff;
}
.contacts__form input::placeholder,
.contacts__form textarea::placeholder {
  color: rgba(255, 255, 255, 0.5);
}

.contacts__list {
  list-style: none;
}

.contacts__item {
  padding: 0 0 20px;
}
.contacts__item h3 {
  text-transform: uppercase;
  font-size: 0.9rem;
}

.contacts__item p {
  font-size: 0.8rem;
  line-height: 1.25rem;
  font-weight: 100;
}

.footer {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 35px 10%;
  font-weight: 300;
  color: rgba(255, 255, 255, 0.75);
  background-color: black;
}
.copy__text {
  font-size: 0.8rem;
}

.copy__text:before {
  content: "\00A9";
  padding-right: 3px;
}

.logo_footer {
  font-size: 1.25rem;
}

.dev__text {
  font-size: 0.75rem;
}

.dev__text_red {
  font-weight: 800;
  color: #bd2946;
}
